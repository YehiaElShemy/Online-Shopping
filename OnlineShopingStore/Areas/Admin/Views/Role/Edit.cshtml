
@{
    ViewData["Title"] = "Edit";
}

<h1>EditUser</h1>
<form asp-action="Edit" id="user-Form" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label>Role Name</label>
        </div>
        <input type="hidden" name="id" value="@ViewBag.ID" />
      
        <div col-5>
            <input name="Name" required="Required" value="@ViewBag.Name" type="text" class="form-control">

        </div>

    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update">
        <a class="btn btn-success" asp-action="Index" asp-controller="Role" asp-area="Admin"> Back To List</a>
    </div>


</form>
<script src="~/jquery-validate/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
    <script>
    $(document).ready(function(){
        $("#user-Form").validate({
            rules: {
                UserName: {
                    required: true,
                }
            }
        });});
    </script>
}