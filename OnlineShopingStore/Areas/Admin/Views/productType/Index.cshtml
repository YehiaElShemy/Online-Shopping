@model IEnumerable<OnlineShopingStore.Models.ProductType>
<br />
<br />
<div class="row ">
    <div class="Col-6">
        <h2 class=" text-info">Product Type List</h2>
    </div>
    <div class="Col-6  btn-lg float-right">
        <a asp-action="Create" class="btn btn-info ">&nbsp;      New Product Type</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(p => p.Producttype)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Producttype</td>
                    <td><partial name="_Partial" model="@item.Id" /></td>

                </tr>

            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var Save = '@TempData["Save"]'
            console.log(Save)
            if (Save != '') {
                alertify.success(Save)
            }
            var Edit = '@TempData["Edit"]'
            console.log(Edit)
            if (Edit != '') {
                alertify.message(Edit)
            }
            var Remove = '@TempData["Remove"]'
            console.log(Remove)
            if (Remove != '') {
                alertify.error(Remove)
            }
        })
    </script> 
}