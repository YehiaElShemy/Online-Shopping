@model OnlineShopingStore.Models.ProductType
@{
    ViewData["Title"] = "Details";
}
<h1>Information About Product</h1>
<form asp-action="Details" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Producttype" ></label>
        </div>

        <div col-5>
            <input asp-for="Producttype" readonly="readonly" class="form-control" type="text">
        </div>

        <span asp-validation-for="Producttype" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-controller="ProductType" asp-route-Id="@Model.Id"class="btn btn-primary" >Edit</a>
        <a asp-action="Delete" asp-controller="ProductType" asp-route-Id="@Model.Id"class="btn btn-danger" >Delete</a>
        <a class="btn btn-success" asp-action="Index" asp-controller="ProductType" asp-area="Admin"> Back To List</a>
    </div>


</form>

