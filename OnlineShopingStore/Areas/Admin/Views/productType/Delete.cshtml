@model OnlineShopingStore.Models.ProductType
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You sure To Delete product</h1>
<form asp-action="Delete" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Producttype"></label>
        </div>

        <div col-5>
            <input asp-for="Producttype" readonly="readonly" class="form-control" type="text">
        </div>

        <span asp-validation-for="Producttype" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-danger" value="Delete">
        <a class="btn btn-success" asp-action="Index" asp-controller="ProductType" asp-area="Admin"> Back To List</a>
    </div>


</form>

